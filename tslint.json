{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-config-standard", "tslint-react", "tslint-eslint-rules", "tslint-config-prettier"],
  "rules": {
    "max-line-length": {
      "options": [200]
    },
    "no-unused-variable": true,
    "ordered-imports": false,
    "new-parens": true,
    "member-access": false,
    "no-arg": true,
    "no-bitwise": true,
    "forin": false,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    }
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
